		System.out.println("Enter the string :");
	 	str=sc.nextLine();
	 	
	 	System.out.println("Enter the letter to know its last index :");
	 	Char=sc.next();
	 	System.out.println(str.lastIndexOf((String) Char));
	 	sc.close();
	
	}
}

